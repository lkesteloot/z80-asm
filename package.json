{
  "name": "z80-asm",
  "version": "1.0.0",
  "description": "Z80 assembler and IDE",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:main && npm run build:module",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "build:test": "tsc -p tsconfig.test.json",
    "generate": "tsc --project opcodes && node opcodes/dist/GenerateJson.js",
    "test": "npm run build:test && mocha -r ts-node/register src/**/*.spec.ts",
    "clean": "rm -rf dist dist-tests"
  },
  "author": "Lawrence Kesteloot <lk@teamten.com> (https://www.teamten.com/lawrence/)",
  "license": "MIT",
  "keywords": [
    "z80",
    "assembler"
  ],
  "bin": {
    "zasm": "bin/zasm"
  },
  "dependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.5",
    "chai": "^4.2.0",
    "chalk": "^3.0.0",
    "mocha": "^7.1.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "z80-base": "^1.0.4"
  }
}
