{
  "name": "z80-asm",
  "version": "1.0.0",
  "description": "Z80 assembler and IDE",
  "scripts": {
    "build": "npm run build:main && npm run build:module",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "build:test": "tsc -p tsconfig.test.json",
    "generate": "tsc --project opcodes && node opcodes/dist/GenerateJson.js",
    "test": "npm run build:test && mocha -r ts-node/register src/**/*.spec.ts",
    "watch": "webpack --watch",
    "clean": "rm -rf dist dist-tests"
  },
  "author": "Lawrence Kesteloot <lk@teamten.com> (https://www.teamten.com/lawrence/)",
  "license": "MIT",
  "keywords": [
    "z80",
    "assembler"
  ],
  "bin": {
    "zasm": "bin/zasm"
  },
  "private": true,
  "dependencies": {
    "chalk": "^3.0.0",
    "codemirror": "^5.52.2",
    "z80-base": "^1.0.4"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/codemirror": "0.0.88",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.5",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "mocha": "^7.1.1",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.3",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-build-notifier": "^2.0.0",
    "webpack-cli": "^3.3.11"
  }
}
