{
    "compilerOptions": {
        "composite": true,
        "target": "es6",
        "module": "es6",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node"
    },
    "include": [
        "src/**/*.ts"
    ]
}
